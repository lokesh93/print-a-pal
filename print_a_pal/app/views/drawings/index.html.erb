<p id="notice"><%= notice %></p>

<h1 style="text-align:center">Listing Drawings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drawings.each do |drawing| %>
      <tr>
        <td><%= drawing.user_id %></td>
        <td><%= link_to 'Show', drawing %></td>
        <td><%= link_to 'Delete', drawing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= drawing.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div style="text-align:center;font-size:24px;"> 
<%= link_to 'New Drawing', new_drawing_path %>
</div>
